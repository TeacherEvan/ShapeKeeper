{
    "name": "shapekeeper",
    "version": "4.3.0",
    "description": "ShapeKeeper - A modern browser-based territory capture game with turn-based multiplayer",
    "main": "index.html",
    "scripts": {
        "dev": "convex dev",
        "build": "echo 'No build step required'",
        "start": "npx http-server -p 8000 -o",
        "serve": "python -m http.server 8000",
        "verify": "echo 'üîç Verifying ShapeKeeper...' && npx convex typecheck && echo '‚úÖ Convex types OK' && node -c game.js && echo '‚úÖ game.js syntax OK' && node -c welcome.js && echo '‚úÖ welcome.js syntax OK' && node -c convex-client.js && echo '‚úÖ convex-client.js syntax OK' && echo 'üéâ All verifications passed!'",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "test": "vitest run",
        "test:watch": "vitest",
        "deploy": "npx convex deploy --yes",
        "deploy:prod": "npx convex deploy --cmd-url-env-var-name CONVEX_URL --yes"
    },
    "keywords": [
        "game",
        "ShapeKeeper",
        "canvas",
        "javascript",
        "html5",
        "multiplayer",
        "board-game",
        "party-mode"
    ],
    "author": "Teacher Evan",
    "license": "MIT",
    "dependencies": {
        "convex": "^1.31.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.5.0",
        "jsdom": "^27.3.0",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    }
}
